<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/click_end"
        motion:constraintSetStart="@id/click_start"
        motion:duration="1000">
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/click_start"
        motion:constraintSetStart="@id/click_end"
        motion:duration="1000">
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/swipe_end"
        motion:constraintSetStart="@id/swipe_start"
        motion:duration="1000">
    </Transition>

    <Transition
        motion:constraintSetEnd="@+id/swipe_start"
        motion:constraintSetStart="@id/swipe_end"
        motion:duration="1000">
    </Transition>


    <ConstraintSet android:id="@+id/click_end">

        <Constraint
            android:id="@+id/date_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/task_name"/>

        <Constraint
            android:id="@id/task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/task_description"/>

        <Constraint
            android:id="@id/task_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/task_priority"/>

        <Constraint
            android:id="@id/task_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/task_description"/>

        <Constraint
            android:id="@id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toStartOf="@id/task_description"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/click_start">
        <Constraint
            android:id="@+id/date_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/task_name"/>

        <Constraint
            android:id="@id/task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/date_and_time" />

        <Constraint
            android:id="@id/task_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintTop_toBottomOf="@id/task_name" />

        <Constraint
            android:id="@id/task_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintTop_toBottomOf="@id/task_description"/>

        <Constraint
            android:id="@id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toStartOf="@id/task_description"/>

    </ConstraintSet>


    <ConstraintSet android:id="@+id/swipe_start">

        <Constraint
            android:id="@+id/date_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/task_name"/>

        <Constraint
            android:id="@id/task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/task_description"/>

        <Constraint
            android:id="@id/task_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/task_priority"/>

        <Constraint
            android:id="@id/task_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@id/task_description"/>

        <Constraint
            android:id="@id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toStartOf="@id/task_description"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/swipe_end">
        <Constraint
            android:id="@+id/date_and_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintBottom_toTopOf="@id/task_name"/>

        <Constraint
            android:id="@id/task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintTop_toBottomOf="@id/date_and_time" />

        <Constraint
            android:id="@id/task_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintTop_toBottomOf="@id/task_name" />

        <Constraint
            android:id="@id/task_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintTop_toBottomOf="@id/task_description"/>

        <Constraint
            android:id="@id/delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toStartOf="@id/task_description"/>

    </ConstraintSet>
</MotionScene>
