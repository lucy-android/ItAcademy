<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".firstscreen.FirstFragment">

    <TextView
        android:id="@+id/task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/task_name" />

    <EditText
        android:id="@+id/enter_task_name"
        android:hint="@string/name_the_task"
        style="@style/edittexts"/>

    <TextView
        android:id="@+id/task_description"
        android:text="@string/task_description"
        style="@style/texts" />

    <EditText
        android:id="@+id/describe_task"
        android:hint="@string/describe_the_task"
        style="@style/edittexts" />

    <TextView
        android:id="@+id/current_date_time"
        android:text="@string/due_date_and_time"
        style="@style/texts" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/timeButton"
            style="@style/buttons"
            android:text="@string/change_due_time" />

        <Button
            android:id="@+id/dateButton"
            android:text="@string/change_due_date"
            style="@style/buttons" />

    </LinearLayout>
</LinearLayout>