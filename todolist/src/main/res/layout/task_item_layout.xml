<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motion_layout"
    style="@style/MyCardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/secondaryTextColor"
    app:layoutDescription="@xml/task_item_layout_xml_linearlayout_scene">


    <TextView
        android:id="@+id/date_and_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:minHeight="20dp"
        android:padding="@dimen/cardview_default_elevation"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintBottom_toTopOf="@+id/task_name"
        app:layout_constraintStart_toStartOf="@+id/task_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Date and time" />

    <TextView
        android:id="@+id/task_name"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:minHeight="40dp"
        android:padding="@dimen/cardview_default_elevation"
        android:textColor="@color/primaryTextColor"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/task_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_and_time"
        tools:text="Task name" />


    <TextView
        android:id="@+id/task_description"
        style="@style/Base.TextAppearance.AppCompat.Subhead"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:padding="@dimen/cardview_default_elevation"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintBottom_toTopOf="@+id/task_priority"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_name"
        tools:text="Task description" />

    <TextView
        android:id="@+id/task_priority"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/cardview_default_elevation"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_description"
        tools:text="Task priority" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/secondaryLightColor"
        android:padding="12dp"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintEnd_toStartOf="@id/task_priority" />

</androidx.constraintlayout.motion.widget.MotionLayout>