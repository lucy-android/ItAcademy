<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.ItAcademyAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>

        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryDarkColor</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/boogaloo</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>

    </style>

    <style name="Theme.CustomButton" parent="@style/Widget.AppCompat.Button">

        <item name="android:layout_width">@dimen/zero</item>
        <item name="android:layout_height">@dimen/dimens_middle</item>
        <item name="android:layout_margin">@dimen/dimens_petite</item>
        <item name="android:padding">@dimen/dimens_petite</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>

</resources>

