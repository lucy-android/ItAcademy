<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_for_comment_one"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    card_view:cardCornerRadius="4dp"
>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:background="@drawable/backwithborder"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/transferred_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@android:color/transparent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintVertical_bias="0.879"
            tools:src="@drawable/sweet_boy">

        </ImageView>

        <ImageView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginBottom="64dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_favorite_border_24"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/how_many_likes"
            card_view:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="@android:color/transparent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="1.0"
            android:focusable="true" />

        <TextView
            android:id="@+id/how_many_likes"
            android:layout_width="65dp"
            android:layout_height="24dp"
            android:layout_marginBottom="64dp"
            android:text="200"
            android:textColor="@color/secondaryColor"
            android:backgroundTint="@android:color/transparent"
            card_view:layout_constraintBottom_toBottomOf="@+id/transferred_photo"
            card_view:layout_constraintStart_toEndOf="@id/like"
            card_view:layout_constraintEnd_toStartOf="@id/comments"/>


        <ImageView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="64dp"
            android:src="@drawable/ic_baseline_comment_24"

            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/textView1"
            android:backgroundTint="@android:color/transparent"
            card_view:layout_constraintStart_toEndOf="@+id/how_many_likes"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="65dp"
            android:layout_height="24dp"
            android:layout_marginStart="0dp"
            android:backgroundTint="@android:color/transparent"
            android:text="3"
            android:textColor="@color/secondaryColor"
            card_view:layout_constraintBottom_toBottomOf="@+id/transferred_photo"
            card_view:layout_constraintStart_toEndOf="@id/comments"
            android:layout_marginBottom="64dp"/>

        <ImageView
            android:id="@+id/bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:src="@drawable/ic_baseline_bookmark_24"

            android:backgroundTint="@android:color/transparent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@id/textView1"
            android:layout_marginBottom="64dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>